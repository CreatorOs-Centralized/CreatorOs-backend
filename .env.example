# ============================================
# Database (Postgres)
# ============================================
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_PORT=5432
POSTGRES_DBS=auth_db,profile_db,content_db,publishing_db,scheduler_db,analytics_db,notification_db,asset_db

# ============================================
# Redis
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# Kafka
# ============================================
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_PORT=9092
ZOOKEEPER_PORT=2181

# Platform Kafka topics
KAFKA_TOPIC_USER_CREATED=auth.user.created
KAFKA_TOPIC_USER_ROLE_UPDATED=auth.user.role-updated
KAFKA_TOPIC_USER_DELETED=auth.user.deleted
KAFKA_TOPIC_PUBLISH_REQUESTED=publish.requested
KAFKA_TOPIC_PUBLISH_SUCCEEDED=publish.succeeded

# ============================================
# Service ports
# ============================================
API_GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8081
PROFILE_SERVICE_PORT=8082
CONTENT_SERVICE_PORT=8083
ASSET_SERVICE_PORT=8084
PUBLISHING_SERVICE_PORT=8085
SCHEDULER_SERVICE_PORT=8086
ANALYTICS_SERVICE_PORT=8087
NOTIFICATION_SERVICE_PORT=8090

# ============================================
# Auth (custom JWT; Keycloak removed)
# ============================================
# Must be >= 32 bytes
JWT_SECRET=

# Token TTLs (seconds or ISO-8601 duration depending on service)
ACCESS_TOKEN_EXPIRATION=900
REFRESH_TOKEN_EXPIRATION=604800

# Auth-service behavior flags
AUTH_DEBUG_TOKEN_RESPONSE=false
AUTH_SKIP_EMAIL_VERIFICATION=true
FRONTEND_BASE_URL=https://creatoros.adharbattulwar.com
AUTH_MAIL_FROM=no-reply@creatoros.local
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Auth-service -> notification-service integration (optional; defaults exist)
NOTIFICATION_SERVICE_BASE_URL=http://notification-service:8090
NOTIFICATION_SERVICE_INGEST_PATH=/api/v1/internal/notifications/ingest
NOTIFICATION_SERVICE_TOPIC=notification.send.requested

# ============================================
# External OAuth Integration - LinkedIn
# ============================================
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URI=http://localhost:8080/oauth/linkedin/callback

# ============================================
# External OAuth Integration - YouTube/Google
# ============================================
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_REDIRECT_URI=
YOUTUBE_STATE_SECRET=
YOUTUBE_STATE_TTL_SECONDS=

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_API_KEY=
GOOGLE_REDIRECT_URI=http://localhost:8080/oauth/google/callback

# ============================================
# Google Cloud Platform (GCP)
# ============================================
GCP_PROJECT_ID=
GCP_BUCKET_NAME=
GCP_CREDENTIALS_PATH=./gcp-credentials.json

# ============================================
# Runtime env
# ============================================
SPRING_PROFILES_ACTIVE=docker
ENVIRONMENT=development

# ============================================
# Notification (Mailersend)
# ============================================
EMAIL_PROVIDER=brevo
BREVO_API_KEY=
BREVO_SMTP_KEY=
BREVO_BASE_URL=https://api.brevo.com
BREVO_FROM_EMAIL=example@example.com
BREVO_FROM_NAME=CreatorOS

MAILERSEND_TOKEN=
MAILERSEND_FROM_EMAIL=example@example.com
MAILERSEND_FROM_NAME=CreatorOS

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=false