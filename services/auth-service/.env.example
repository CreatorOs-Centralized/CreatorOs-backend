# Copy this file to .env and fill in values.
# This repo intentionally does NOT commit .env.

# Ports (host -> container)
AUTH_SERVICE_HOST_PORT=8082
AUTH_DB_HOST_PORT=5433
KEYCLOAK_HOST_PORT=8081
KEYCLOAK_DB_HOST_PORT=5432
KAFKA_HOST_PORT=9092

# Auth DB (Postgres)
AUTH_DB_USER=postgres
AUTH_DB_PASSWORD=change_me
AUTH_DB_NAME=auth_db

# auth-service container environment
SPRING_PROFILES_ACTIVE=docker
SPRING_DATASOURCE_URL=jdbc:postgresql://auth-db:5432/auth_db
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=change_me
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Keycloak realm + endpoints
KEYCLOAK_REALM=creatorOs
KEYCLOAK_ISSUER_URI=http://localhost:8081/realms/creatorOs
KEYCLOAK_JWK_SET_URI=http://keycloak:8080/realms/creatorOs/protocol/openid-connect/certs

# Keycloak admin (DEV ONLY)
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=change_me

# Keycloak DB (Postgres)
KEYCLOAK_DB_USER=keycloak
KEYCLOAK_DB_PASSWORD=change_me
KEYCLOAK_DB_NAME=keycloak

# Keycloak runtime
KC_DB=postgres
KC_DB_URL=jdbc:postgresql://keycloak-db:5432/keycloak
KC_HTTP_ENABLED=true
KC_HOSTNAME_STRICT=false
KC_PROXY=edge
